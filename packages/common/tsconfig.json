{
  "extends": "../../tsconfig.json",

  "compilerOptions": {
    "module": "ESNext",
    "outDir": "./dist/esm",

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "baseUrl": "./src",

    "declarationDir": "./dist/types",
    "declaration": true,
    "noEmit": false,
    "declarationMap": true
  },

  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
