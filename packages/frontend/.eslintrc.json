{
  "env": { "browser": true },
  "extends": ["plugin:react-hooks/recommended"],
  "plugins": ["react-refresh"],
  "rules": {
    "react-refresh/only-export-components": [
      "warn",
      { "allowConstantExport": true }
    ]
  },
  "ignorePatterns": [
    ".eslintrc.js",
    "dist",
    "node_modules",
    "postcss.config.js",
    "tailwind.config.js"
  ]
}
